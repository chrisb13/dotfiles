}

#bash command to push file(s) onto ARCHER (UK)
function ospush() 
{
    RED='\033[0;31m'
    NC='\033[0m'
    if [[ ( $# -eq 0 ) || ( $1 == "--help" ) || ( $1 == "-h" ) ]] ; then
        echo -e "Usage:  ${RED}ospush${NC} PATH_FROM PATH_TO ." 
        echo -e "Purpose: rsync function to push files to ${RED}oswald (Northumbria)${NC} " 
        echo "       " 
        echo "Mandatory arguments: " 
        echo "path_from:   Path on local to Rsync from" 
        echo "path_to: Path on osher to Rsync to" 
        echo "       " 
        echo "Example." 
        echo "This:" 
        echo "ospush ./temp/* /lustre/lzfs/osw_lhly6/"
        echo "       " 
        echo "Becomes:" 
        echo "rsync -avz --progress ./temp/* osw_lhly6@oswald:/lustre/lzfs/osw_lhly6/"

        return 1
    fi
    #grabs last passed argument..
    for last; do true; done

    rsync -avS --progress ${@:1:$(($#-1))} osw_lhly6@oswald:$last
}


function ospull()
{
    if [[ ( $# -eq 0 ) || ( $1 == "--help" ) || ( $1 == "-h" ) ]] ; then
        echo "Usage:   arcpull PATH_FROM PATH_TO." 
        echo "Purpose: rsync function to pull files from OSWALD." 
        echo "       " 
        echo "Mandatory arguments: " 
        echo "path_from: Path on Oswald to Rsync from" 
        echo "path_to:   Path on local to Rsync to" 
        echo "       " 
        echo "Example." 
        echo "This:" 
        echo "ospull /users/chbull/temp/*.png ./temp"
        echo "       " 
        echo "Becomes:" 
        echo "rsync -avz --progress osw_lhly6@oswald:/users/chbull/temp/*.png ./temp"

        return 1
    fi

    RED='\033[0;31m'
    NC='\033[0m'
    echo -e "${RED}Pulling " ${@:1:$(($#-1))} " from OSWALD" " ${NC}"
    rsync -avz --progress osw_lhly6@oswald:$* 
}


#bash command to push file(s) onto ARCHER (UK)
function arcpush() 
{
    if [[ ( $# -eq 0 ) || ( $1 == "--help" ) || ( $1 == "-h" ) ]] ; then
        echo "Usage:   arcpush PATH_FROM PATH_TO ." 
        echo "Purpose: rsync function to push files to archer2." 
        echo "       " 
        echo "Mandatory arguments: " 
        echo "path_from:   Path on local to Rsync from" 
        echo "path_to: Path on archer2 to Rsync to" 
        echo "       " 
        echo "Example." 
        echo "This:" 
        echo "arcpush ./temp/* /short/e14/cyb561/"
        echo "       " 
        echo "Becomes:" 
        echo "rsync -avz --progress ./temp/* arc2:/massdata/e14/cyb561/now/"

        return 1
    fi
    #grabs last passed argument..
    for last; do true; done

    RED='\033[0;31m'
    NC='\033[0m'
    echo -e "${RED}Pushing  " ${@:1:$(($#-1))} " into ARCHER, specifically: " $last " ${NC}"

    rsync -avS --progress ${@:1:$(($#-1))} arc2:$last
}

