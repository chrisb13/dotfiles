        echo "Example." 
        echo "This:" 
        echo "jaspush ./temp/* /home/users/chbull/"
        echo "       " 
        echo "Becomes:" 
        echo "rsync  -avz --progress ./temp/*  jasmin:/home/users/chbull"
        

        return 1
    fi
    #grabs last passed argument..
    for last; do true; done

    RED='\033[0;31m'
    NC='\033[0m'
    echo -e "${RED}Pushing  " ${@:1:$(($#-1))} " from JASMIN, into " $last " ${NC}"

    rsync -avS --progress ${@:1:$(($#-1))} jas:$last
}


