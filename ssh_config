#sortof modelled on...
#http://rubenlaguna.com/post/2014-06-10-ssh-port-forwarding-through-multiple-hops-slash-dot-ssh-slash-config-slash/
Host bas
  User chbull
  HostName  bslcenb.nerc-bas.ac.uk

Host jashop
  #HostName jasmin-login1.ceda.ac.uk
  HostName login1.jasmin.ac.uk
  User chbull
  ProxyCommand ssh chbull@bas -XCYW %h:%p
  IdentityFile ~/.ssh/id_rsa_jasmin

Host jas
  HostName sci8.jasmin.ac.uk
  User chbull
  ProxyCommand ssh chbull@jashop -XCYW %h:%p
  IdentityFile ~/.ssh/id_rsa_jasmin
  ServerAliveInterval 240

Host arc2
  HostName login.archer2.ac.uk
  #HostName login-4c.archer2.ac.uk
  User chbull
  #ProxyCommand ssh chbull@bas -XCYW %h:%p
  IdentityFile ~/.ssh/id_rsa_arc2
  ControlMaster auto
  ControlPersist yes
  ControlPath ~/.ssh/archer2-sockets/%r
  #NB: create this folder on your local machine:  ~/.ssh/archer-sockets
  #see email from support: Aug 5, 2020, 6:52 PM


Host arc2_4c
  HostName login-4c.archer2.ac.uk
  User chbull
  IdentityFile ~/.ssh/id_rsa_arc2
  ControlMaster auto
  ControlPersist yes
  ControlPath ~/.ssh/archer24c-sockets/%r

Host arc2n01
  #HostName login.archer2.ac.uk
  HostName login-4c.archer2.ac.uk
  User cbull
  #ProxyCommand ssh chbull@bas -XCYW %h:%p
  IdentityFile ~/.ssh/id_rsa_arc2
  ControlMaster auto
  ControlPersist yes
  ControlPath ~/.ssh/archer2n01-sockets/%r
