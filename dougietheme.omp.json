{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "template": " \u29d7 {{ .FormattedMs }}"
          },
          "foreground": "#f6e7d2",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "properties": {
            "template": " \uf508 {{ .UserName }}@{{ .HostName }} "
          },
          "foreground": "#009c95",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "template": " <#757575,>as</> root"
          },
          "foreground": "#ff8080",
          "type": "root",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}",
            "windows": "\ue62a"
          },
          "leading_diamond": "\ue0b6",
          "foreground": "#242526",
          "background": "#e76f51",
          "type": "os",
          "style": "diamond"
        },
        {
          "properties": {
            "style": "agnoster_short",
            "template": "{{ .Path }} "
          },
          "foreground": "#242526",
          "powerline_symbol": "\ue0b0",
          "background": "#e76f51",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
          },
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#f78fb3",
          "type": "node",
          "style": "powerline"
        },
        {
          "properties": {
            "fetch_version": false,
            "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
          },
          "foreground": "#242526",
          "powerline_symbol": "\ue0b0",
          "background": "#f4a261",
          "type": "python",
          "style": "powerline"
        },
        {
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }} "
          },
          "foreground": "#242526",
          "powerline_symbol": "\ue0b0",
          "background": "#e9c46a",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#e9c46a{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#e9c46a{{ end }}",
            "{{ if gt .Ahead 0 }}#e9c46a{{ end }}",
            "{{ if gt .Behind 0 }}#e9c46a{{ end }}"
          ]
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "template": " \uf0e7 "
          },
          "type": "root",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
